Algoritmo "exemplo_pares_consecutivos"

Var
x, soma : inteiro


Inicio

   Escreva("Digite um número: ")
   leia(x)

   enquanto x <> 0 faca
        Se x%2 = 0 entao
        soma <- (5 * x) + 20
        senao
        soma <- (5 *x) + 25
   fimse

   Escreval("Soma: ", soma)

   Escreva("Digite um número: ")
   leia(x)


fimenquanto
     


Fimalgoritmo